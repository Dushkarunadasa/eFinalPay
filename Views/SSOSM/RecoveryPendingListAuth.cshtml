@model IEnumerable< FinaPay.Contract.RecoveryCheckContract>

@{
    ViewData["Title"] = "Recovery Received List- SSO(SM)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">All Received Recoveries-Pending</h1>
<br />

<div class="card mb-4">
    <div class="card-body">

        පහත වගුවේ නම් සඳහන් නාවිකයින් හට අදාල අයකිරිම් සියළු දෙපාර්තමේන්තු විසින් ඉදිරිපත් කර ඇති  වැඩි විස්තර Details ලිංකුව මගින් නිරීක්ෂණය කල හැක.

    </div>
</div>


 
<table id="datatablesSimple" class=" table table-striped">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.TransID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SysCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DischargeDt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pending)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.IsPending)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-dark">
            <td>
                    @Html.DisplayFor(modelItem => item.TransID)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.SysCode)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CatCode)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OfficialNo)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DischargeDt)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Pending)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPending)
            </td>
            <td>                   

                    <a asp-controller="SSOSM" asp-action="EditAuth" asp-route-id="@item.TransID" type="button" class="btn btn-outline-primary">
                        <i class="glyphicon glyphicon-plus-sign"></i> Details
                    </a>
                  
            </td>
        </tr>
}
    </tbody>
</table>

