@model FinaPay.Contract.SubLoginContract

@{
    Layout = "_LoginLayout";
}
@{
    ViewData["Title"] = "Finalpay System";
}

<br/>
<br />
<section class="h-100 gradient-form p-10 accordion-header" style="background-color: #eee;">

     

    <div class="container py-5 h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">

            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/images/7.jpg" class="img-fluid" alt="Phone image" />

            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                <form method="post" asp-action="Login" asp-controller="Login">
                    <p class="text-danger"> @ViewBag.Message </p>

                    <h2 class="fw-bold mb-5">Final Pay System</h2>
                                      

                    <div class="form-outline mb-4">
                        <select class="form-select form-select-lg mb-3" asp-items="Model.Units" asp-for="UnitId">
                        </select>

                        <label class="form-label" for="ddUnit">Unit/Department</label>
                        <input type="hidden" asp-for="UnitId" />

                    </div>

           
                  @* @Html.DropDownListFor(Model=>Model.Rolls,new SelectList(""),"--Select User Type--", new {@class="form-control"})*@

                    <div class="form-outline mb-4">


                        <select class="form-select" asp-items="Model.Rolls" asp-for="RollId">
                        </select>

                        <label class="form-label" for="form1UserType">User Type</label>
                        <input type="hidden" asp-for="RollId" />

                    </div>

                    <div class="form-outline mb-4">
                        <span asp-validation-for="UserName"></span>
                        <input asp-for="UserName" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">SLN Email address</label>
                    </div>


                    <div class="form-outline mb-4">
                        <span asp-validation-for="Password"></span>
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">HRMS Password</label>
                    </div>



                    <!-- Submit button -->


                    <button asp-controller="Login" class="btn btn-primary btn-lg btn-block">Sign in</button>
                    @*<input name="__RequestVerificationToken" type="hidden" value="<token_generated_here>">*@

                    @if (TempData["Success"] != null)
                    {
                        <h2> TempData["Success"] </h2>
                    }
                </form>
            </div>
        </div>
    </div>

    @* @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }*@
</section>
